<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Home</title>
    <link rel="stylesheet" href="../public/css/home.css">
</head>

<body>
    <div class="topnav">
        <a class="active" href="/home">Home</a>
        <a href="/create">Create Employee</a>
        <a href="/payrates">Pay Rates</a>
    </div>

    <table>
        <tr>
            <th>ID employee</th>
            <th>Employee Number</th>
            <th>Last name</th>
            <th>First Name</th>
            <th>SSN</th>
            <th>Pay Rate</th>
            <th>Pay Rates_idPay Rates</th>
            <th>Vacation Days</th>
            <th>Paid To Date</th>
            <th>Paid Last Year</th>
            <th>Acction</th>
        </tr>

        <% ListEmployee.forEach(function(Em){ %>
            <tr>
                <td>
                    <%= Em.idEmployee %>
                </td>
                <td>
                    <%= Em['Employee Number'] %>
                </td>
                <td>
                    <%= Em['Last Name'] %>
                </td>
                <td>
                    <%= Em['First Name'] %>
                </td>
                <td>
                    <%= Em.SSN %>
                </td>
                <td>
                    <%= Em['Pay Rate'] %>
                </td>
                <td>
                    <%= Em['Pay Rates_idPay Rates'] %>
                </td>
                <td>
                    <%= Em['Vacation Days'] %>
                </td>
                <td>
                    <%= Em['Paid To Date'] %>
                </td>
                <td>
                    <%= Em['Paid Last Year'] %>
                </td>
                <td>
                    <!-- <a href="/getEmployeeId/<%= Em.idEmployee %>">Edit</a> -->
                    <!-- <button>Edit</button> -->
                    <form action="/getEmployeeId/<%= Em.idEmployee %>" method="post">
                        <button>Edit</button>

                    </form>
                    <form action="/deleteEmployee/<%= Em.idEmployee %>" method="post">
                        <button>Delete</button>

                    </form>
                </td>
            </tr>
            <%});%>


    </table>

</body>

</html>